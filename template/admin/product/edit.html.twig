{% extends "admin/default.html.twig" %}

{% block content %}

    <h1>Produkty - úprava</h1>

    <form action="{{ _router.generateUrl("admin_product_edit", {"id":product.id}) }}" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="form_edit_name">Název</label>
                <input value="{{ product.Name }}" type="text" name="name" class="form-control" id="form_edit_name">
            </div>
            <div class="form-group">
                <label for="form_edit_text">Texťík</label>
                <textarea class="form-control" name="text" rows="10" id="form_edit_text">{{ product.Text }}</textarea>
            </div>
            <div class="checkbox">
                <label>
                    <input {% if product.Active %}checked{% endif %} type="checkbox" name="active" value="1">
                    Aktivní
                </label>
            </div>
            <div class="form-group">
                <label for="form_edit_page_of_product">Stránka produktu</label>
                <select name="page_of_product" class="form-control" id="form_edit_page_of_product">
                    <option value="0">--- Vyberte ---</option>
                    {% for page_of_product in page_of_products %}
                        <option value="{{ page_of_product.id }}"
                                {% if page_of_product.id == product.PageOfProduct %}
                                selected
                                {% endif %}
                        >
                        {% if page_of_product.title %}
                            {{ page_of_product.title }}
                        {% elseif page_of_product.name %}
                            {{ page_of_product.name }}
                        {% else %}
                            #{{ page_of_product.id }}
                        {% endif %}
                    </option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="form_new_obrazek">Obrázek</label>
                <input type="file" name="obrazek" class="form-control" id="form_new_obrazek">
                {% if product.Obrazek %}
                    <img style="width:auto;height:auto;max-width:200px;max-height:200px" src="upload/{{ product.Obrazek }}">
                    <br/><label><input type="checkbox" name="obrazek_delete"> Smazat</label>
                {% endif %}
            </div>
            <div class="form-group">
                <label for="form_new_soubor">Soubor</label>
                <input type="file" name="soubor" class="form-control" id="form_new_soubor">
                {% if product.Soubor %}
                    <a href="upload/{{ product.Soubor }}" target="_blank">zobrazit</a>
                    <br/><label><input type="checkbox" name="soubor_delete"> Smazat</label>
                {% endif %}
            </div>
        <button type="submit" class="btn btn-default">Uložit</button>
    </form>

{% endblock %}