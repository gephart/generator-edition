{% extends "admin/default.html.twig" %}

{% block content %}

    <h1>Novinky - úprava</h1>

    <form action="{{ _route.generateUrl("admin_news_edit", {"id":new.id}) }}" method="post">
        <div class="form-group">
            <label for="exampleInputEmail1">Titulek</label>
            <input type="text" name="title" class="form-control" id="exampleInputEmail1" value="{{ new.title }}" placeholder="">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Obsah (HTML)</label>
            <textarea class="form-control" name="content" rows="3">{{ new.content }}</textarea>
        </div>
        <div class="form-group">
            <label for="exampleInput">Datum</label>
            <input type="date" name="date" class="form-control" value="{{ new.date.format("Y-m-d") }}" id="exampleInput" placeholder="">
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" name="active" value="1" {% if new.active %}checked{% endif %}>
                Viditelný
            </label>
        </div>
        <button type="submit" class="btn btn-default">uložit</button>
    </form>

{% endblock %}