{% extends "admin/default.html.twig" %}

{% block content %}

    <h1>Stránky</h1>

    <p>
        <button class="btn btn-success" onclick="document.getElementById('form-add').style.display='block';this.style.display='none'">Přidat</button>
    </p>

    <div id="form-add" style="display: none">
        <form action="{{ _router.generateUrl("admin_page") }}" method="post">
            <div class="form-group">
                <label for="form_new_title">Nadpis</label>
                <input type="text" name="title" class="form-control" id="form_new_title">
            </div>
            <div class="form-group">
                <label for="form_new_text">Text</label>
                <textarea class="form-control" name="text" rows="10" id="form_new_text"></textarea>
            </div>
            <div class="form-group">
                <label for="form_new_date_publish">Datum publikování</label>
                <input type="date" name="date_publish" class="form-control" id="form_new_date_publish">
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="published" value="1">
                    Zobrazovat
                </label>
            </div>
            <div class="form-group">
                <label for="form_new_author">Autor</label>
                <input type="text" name="author" class="form-control" id="form_new_author">
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="neco" value="1">
                    Neco
                </label>
            </div>
            <button type="submit" class="btn btn-default">Přidat</button>
        </form>
        <br/>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            {% for page in pages %}
                <tr>
                    <td>
                        <a href="{{ _router.generateUrl("admin_page_edit", {"id":page.id}) }}">{{ page.title }}</a>
                    </td>
                    <td width="130">
                        <a class="btn btn-xs btn-success" href="{{ _router.generateUrl("admin_page_edit", {"id":page.id}) }}">upravit</a>
                        <a class="btn btn-xs btn-danger" href="{{ _router.generateUrl("admin_page_delete", {"id":page.id}) }}"
                           onclick="return confirm('Opravdu?')">smazat</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}